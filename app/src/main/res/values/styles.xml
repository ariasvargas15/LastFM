<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/White</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="SearchTextView" parent="AppTheme">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/search_text_view</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="ArtistTitle" parent="AppTheme">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/artist_text_title</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="ArtistInfo" parent="AppTheme">
        <item name="android:textSize">@dimen/artist_text_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="RaisedButtonDark" parent="AppTheme">
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="SpinnerCountries" parent="AppTheme">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_search_view</item>
    </style>
</resources>